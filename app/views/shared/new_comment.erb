<!-- NEW COMMENT FORM -->
<form class="new-comment" action="/comments" method="POST">
  <!-- TEXT INPUT -->
  <div class="form-group">
    <input type="text" id="text" name="text" placeholder="Comment" />
  </div>
  <!-- HIDDEN ID INPUT -->
  <input
    type="hidden"
    id="finstagram_post_id"
    name="finstagram_post_id"
    value="<%= finstagram_post.id %>"
  />
  <!-- SUBMIT -->
  <div class="form-group">
    <button class="button" type="submit">Submit</button>
  </div>
</form>
